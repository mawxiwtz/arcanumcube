{
  "name": "arcanumcube",
  "version": "0.1.2",
  "description": "Arcanum Cube",
  "type": "module",
  "license": "MIT",
  "author": "mawxiwtz",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mawxiwtz/arcanumcube.git"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/cjs/arcanumcube.cjs",
  "module": "./dist/esm/arcanumcube.module.js",
  "exports": {
    ".": {
      "types": "./dist/types/arcanumcube.d.ts",
      "import": "./dist/esm/arcanumcube.module.js",
      "require": "./dist/cjs/arcanumcube.cjs"
    }
  },
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "build": "node ./esbuild.js",
    "postbuild": "tsc --allowJs --declaration --emitDeclarationOnly --outDir ./dist/types",
    "start": "node ./esbuild.js --serve",
    "doc": "typedoc --entryPointStrategy expand ./src --out ./docs --disableSources",
    "test": "jest"
  },
  "overrides": {
    "glob": "^11.0.1"
  },
  "devDependencies": {
    "@tweenjs/tween.js": "^25.0.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "@types/three": "^0.173.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "chalk": "^5.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "three": "^0.173.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  }
}
