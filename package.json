{
  "name": "arcanumcube",
  "version": "0.2.0",
  "description": "Arcanum Cube",
  "license": "MIT",
  "author": "mawxiwtz",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mawxiwtz/arcanumcube.git"
  },
  "keywords": [
    "rubiks-cube",
    "puzzle",
    "three",
    "webgl"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/arcanumcube.cjs",
  "module": "./dist/arcanumcube.esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "browser": {
        "import": "./dist/arcanumcube.esm.js",
        "default": "./dist/arcanumcube.umd.js"
      },
      "import": "./dist/arcanumcube.esm.js",
      "require": "./dist/arcanumcube.cjs",
      "default": "./dist/arcanumcube.esm.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.types.json",
    "build:minify": "node scripts/minify.mjs",
    "build:demo": "vite build --config vite.config.demo.ts",
    "clean": "rimraf dist",
    "preview": "vite preview",
    "doc": "typedoc --entryPointStrategy expand ./src --out ./docs --disableSources",
    "test": "jest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/three": "^0.181.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.5",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "three": "^0.181.1",
    "@tweenjs/tween.js": "^25.0.0"
  }
}
